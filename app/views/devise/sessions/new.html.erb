<div class="container mt-3 mb-3">
  <p><%= link_to request.referer.present? ? request.referer : root_path do %>
    <i class="fa-solid fa-backward"></i> Back
  <% end %></p>

  <div class="form-container">
    <div class="container-content">
      <h2 class="mb-3">Log in</h2>
      <%= render "shared/underline" %>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs mt-3">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-melon" %>
        </div>
      <% end %>

      <hr class="hr-line">
      <p>No account yet?</p><%= link_to "Sign up", new_user_registration_path, class: "btn btn-blue" %>
    </div>
  </div>
</div>
