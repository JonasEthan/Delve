<div class="container mt-3 mb-3">
  <p><%= link_to request.referer.present? ? request.referer : root_path do %>
  <% end %></p>

  <div class="center-container">
    <div class="container-content">
      <h1 class="text-center special-font">A moments respite</h1>
      <%= render "shared/underline"%>
    </div>
  </div>
  <br>
  <div data-controller="soon-animation respite" data-soon-animation-root-value="<%= image_url("The Collapse.png")%>"
       data-respite-player-value="<%= @character.to_json %>" data-respite-leave-value="<%= test_fight_path(rooms_id: @room_ids, respite_id: @respite.id) %>"
       class="d-flex justify-content-center">
    <div class="flex-item">
      <canvas data-soon-animation-target="svg" class="teaser" style="margin-right: 30px" height="550" width="250"></canvas>
    </div>
    <div class="mt-3 flex-item">
      <div class="respite-log" data-respite-target="gameLog">
        <p style="color:#42475B"><span data-controller=" typed-js" data-typed-js-message-value="Well hello there...<br>Fancy meeting <span class=special-font>you</span> here"></span></p>
      </div>
      <div class="mt-3 row">
        <button class="btn btn-ocean col-5" data-action="click->respite#playerRest">Take a short rest</button>
        <div class="col-2"></div>
        <button class="btn btn-ocean col-5" data-action="click->respite#embarkJourney">Resume Journey</button>
      </div>
    </div>
  </div>
</div>
